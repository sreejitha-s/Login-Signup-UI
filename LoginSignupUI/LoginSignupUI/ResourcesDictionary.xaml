<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="ButtonStandard">
        <Setter Property="Background" Value="#3457dc"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    <Style x:Key="TextboxStandard" TargetType="TextBox">
        <Setter Property = "Height" Value="25"/>
        <Setter Property = "BorderBrush" Value="LightGray"/>
        <Setter Property = "Margin" Value="5,0"/>
    </Style>
    <Style x:Key="LabelStandard" TargetType="Label">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>
    <Style x:Key="CheckboxStandard" TargetType="CheckBox">
        <Setter Property="BorderBrush" Value="LightGray"/>
        <Setter Property="Margin" Value="5,4,0,0"/>
    </Style>


</ResourceDictionary>